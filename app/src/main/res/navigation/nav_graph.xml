<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.strider.taskmanager.ui.home.HomeFragment"
        android:label="HomeFragment"
        tools:layout="@layout/fragment_home">
        <argument
            android:name="action"
            app:argType="boolean"
            app:nullable="false"
            android:defaultValue="false"/>
        <action
            android:id="@+id/action_homeFragment_to_taskDetailsFragment"
            app:destination="@id/taskDetailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/taskDetailsFragment"
        android:name="com.strider.taskmanager.ui.details.TaskDetailsFragment"
        android:label="{title}"
        tools:layout="@layout/fragment_task_details">
        <action
            android:id="@+id/action_save"
            app:destination="@id/homeFragment"/>
        <argument
            android:name="title"
            app:argType="string"
            app:nullable="true"
            android:defaultValue="@null"/>
        <argument
            android:name="task"
            app:argType="com.strider.taskmanager.database.entity.Task"
            app:nullable="true"
            android:defaultValue="@null"/>
    </fragment>
</navigation>