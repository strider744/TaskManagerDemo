<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_base_8">

        <CheckBox
            android:id="@+id/cb_completed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:minWidth="0dp"
            android:minHeight="0dp" />

        <TextView
            android:id="@+id/tv_task_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/cb_completed"
            android:layout_alignBottom="@id/cb_completed"
            android:layout_toStartOf="@id/task_status_view"
            android:layout_toEndOf="@id/cb_completed"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:textColor="@color/white"
            tools:text="Title" />

        <com.strider.taskmanager.view.TaskStatusView
            android:id="@+id/task_status_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/cb_completed"
            android:layout_alignBottom="@id/cb_completed"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            app:status="none" />

    </RelativeLayout>

</layout>